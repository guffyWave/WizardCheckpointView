<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gufran.wizardcheckpointapp.MainActivity">

    <com.gufran.wizardcheckpointapp.WizardCheckpointView
        android:id="@+id/wizardCheckpointView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:padding="0dp"
        app:checkPointDisabledColor="@android:color/darker_gray"
        app:checkPointPrimaryColor="@color/colorAccent"
        app:icon_complete_selected="@drawable/music_white"
        app:icon_complete_unselected="@drawable/music_colored"
        app:icon_incomplete_selected="@drawable/music_white"
        app:icon_incomplete_unselected="@drawable/music_gray"
        app:progress="00"
        app:selectedStrokeWidth="5dp"
        app:state="0"
        app:unSelectedStrokeWidth="3dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:text="Button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:onClick="onClick2"
        android:layout_marginTop="34dp"
        android:text="Button 2" />

</RelativeLayout>
